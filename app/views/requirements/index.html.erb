<p id="notice"><%= notice %></p>

<h1>Requirements</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Accepted</th>
      <th>Proposal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requirements.each do |requirement| %>
      <tr>
        <td><%= requirement.title %></td>
        <td><%= requirement.description %></td>
        <td><%= requirement.accepted %></td>
        <td><%= requirement.proposal %></td>
        <td><%= link_to 'Show', proposal_requirement_path(@proposal, requirement) %></td>
        <td><%= link_to 'Edit', edit_proposal_requirement_path(@proposal, requirement) %></td>
        <td><%= link_to 'Destroy', proposal_requirement_path(@proposal, requirement), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Requirement', new_proposal_requirement_path(@proposal) %>
