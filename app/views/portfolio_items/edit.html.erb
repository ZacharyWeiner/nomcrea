<h1>Editing Portfolio Item</h1>
<div class='container'>
  <div class='row'>
    <div class='col-md-4'></div>
    <div class='col-md-4'>
      <%= render 'form', portfolio: @portfolio, portfolio_item: @portfolio_item %>
      <%= link_to 'Delete Portfolio', [@portfolio_item.portfolio, @portfolio_item], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block' %>
      <%= link_to 'Show', portfolio_portfolio_item_path(@portfolio_item.portfolio, @portfolio_item) %> |
      <%= link_to 'Back', portfolio_portfolio_items_path(@portfolio_item.portfolio) %>

    </div>
    <div class='col-md-4'></div>
  </div>
</div>