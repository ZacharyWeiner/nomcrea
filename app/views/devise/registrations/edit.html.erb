<div class='contact-form container'>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <div class='row'>
      <div class='col-md-6'>

          <%= image_tag current_user.profile_image, style:'width:100%',  class: 'image-rounded'%>
          <%= f.label :profile_image %><br />
          <%= f.file_field :profile_image %>
          <h4> Skills </h4>
          <% current_user.tags.each do |tag| %>
            <span><%= tag.name %></span><br>
          <% end %>
          <%= link_to "Edit skills", user_pages_my_skills_path, class: 'btn btn-warning'%>
          <% if current_user.company %>
            <%= link_to "Edit Company", edit_company_path(current_user.company), class: 'btn btn-warning'%>
            <br/>
          <%end%>
          
        
      </div>
      <div class='col-md-6'>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true  %>
        </div>
        <div class="form-group">
          <%= f.label :display_name %><br />
          <%= f.text_field :display_name  %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" , placeholder: 'To change: Enter new password' %>
          <% if @minimum_password_length %>
            <br />
          <% end %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off" ,  placeholder: 'To change: Confirm new password' %>
        </div>

        <div class="form-group">
          <%= f.label :current_password %> <i>(to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off" ,  placeholder: 'enter your password to save changes' %>
        </div>
      </div>
      <div class='col-md-5'>

      </div>
      <div class='col-md-2'>
        <div class="actions">
          <%= f.submit "Update", class: 'push-1' %><br/>
          <%= link_to "Back", :back %>
        </div>
        <div class='col-md-5'></div>
      </div>
    </div>
  <% end %>
</div>


