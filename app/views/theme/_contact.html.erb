<div id="contact">
<div class="section">
  <div class="second-title">
    <div class="container">
      <h2>Contact Us</h2>
      <p>Drop us a line, somewhere in the world, one of us is awake</p>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="contact-block">
          <div class="choose-icon bg-second">
            <i class='fa fa-phone fa-3x fa-3-center white'></i>
          </div>
          <div class="text">
            <h6>Phone</h6>
            <a href="tel:">+3 555 5253 1285</a>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="contact-block">
          <div class="choose-icon bg-second">
            <i class='fa fa-envelope-o fa-3x fa-3-center white'></i>
          </div>
          <div class="text">
            <h6>Email</h6>
            <a href="tel:">office@nrgika.com</a>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="contact-block">
          <div class="choose-icon bg-second">
            <i class='fa fa-map-marker fa-3x fa-3-center white'></i>
          </div>
          <div class="text">
            <h6>Address</h6>
            <span>Talay st. 65, 2nd floor Luzon Manila</span>
            <span>Philippines 25607</span>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="contact-block">
          <div class="choose-icon bg-second">
            <i class='fa fa-clock-o fa-3x fa-3-center white'></i>
          </div>
          <div class="text">
            <h6>Work Time</h6>
            <span>Monday to Friday</span>
            <span>9:00 pm to 20:00 pm</span>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= render 'shared/contact_form' %>
      </div>
    </div>
  </div>
</div>
