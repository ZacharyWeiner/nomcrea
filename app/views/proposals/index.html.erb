<p id="notice"><%= notice %></p>

<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Available Proposals</h1>
    <p class="lead text-muted">Go Find You Some Work!</p>
    <p>
      <a href="#" class="btn btn-primary">My Work</a>
      <a href="#" class="btn btn-secondary">My Queue</a>
    </p>
  </div>
</section>


<div class="album text-muted">
  <div class="container">
    <div class="row">
      <% @proposals.each do |proposal| %>
        <div class="card text-center"> 
        <div class="card-header">
          <%= proposal.company.name %>
        </div>
        <div class="card-block">
          <h3 class='card-title'><%= proposal.title %></h3>
          <p class="card-text"><%= proposal.deadline.to_s %></p>
          <%= link_to 'Check It', proposal, class: "btn btn-primary" %>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<%= link_to 'New Proposal', new_proposal_path %>
