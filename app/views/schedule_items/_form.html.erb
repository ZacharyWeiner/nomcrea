<div class='container'>
<%= form_with(model: schedule_item, local: true) do |form| %>
  <% if schedule_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(schedule_item.errors.count, "error") %> prohibited this schedule_item from being saved:</h2>

      <ul>
        <% schedule_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="contact-form">
    <%= form.label 'Name Your Trip' %>
    <%= form.text_field :title, id: :schedule_item_title %>
    <div class='row'>
      <div class='col-md-6 offset-md-6'><%= form.label 'Click To Change' %> <br/></div>
    </div>
    <br/>
    <div class='row'>
      <div class='col-md-6'>
        <%= form.label 'What Date Do You Get There?' %>
      </div>
      <div class='col-md-6'>
         <%= form.date_select :start_date, id: :schedule_item_start_date, class: 'form-control' %>
      </div>
    </div>
    <br/>
    <div class='row'>
      <div class='col-md-6'>
        <%= form.label 'What Date Do You Leave?' %>
      </div>
      <div class='col-md-6'>
         <%= form.date_select :end_date, id: :schedule_item_end_date %>
      </div>
    </div>
    <br/>
    <div class='row'>
      <div class='col-md-6'>
        <%= form.label :location %>
      </div>
      <div class='col-md-6'>
         <%= form.select :location, options_for_select(Tag.build_locations, @location_tag),
      {:multiple => false, class: "form-control"} %>
      </div>
    </div>
    <div class="form-group">
       <%= form.hidden_field :item_type, :value => 'Available'%>
    </div>
    <br/>
    <div class="row">
      <%= form.submit "Add To Schedule", class: 'push-1' %>
    </div>
  <% end %>
</div>